{
  "name": "@codewars/discord-bot",
  "private": true,
  "version": "0.1.0",
  "description": "The official Discord bot for Codewars",
  "author": "kazk",
  "license": "MIT",
  "engines": {
    "node": ">= 12"
  },
  "main": "./lib/main.js",
  "scripts": {
    "start": "node ./lib/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf lib",
    "plop": "plop",
    "prepare": "husky install && npm run build",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.45",
    "@types/node-fetch": "^3.0.3",
    "@types/ws": "^7.4.4",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "plop": "^2.7.4",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "discord.js": "^12.5.3",
    "node-fetch": "^3.1.0",
    "tslib": "^2.2.0",
    "zod": "^3.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "prettier": {
    "printWidth": 100
  }
}
