{
  "name": "@codewars/discord-bot",
  "private": true,
  "version": "0.2.0",
  "description": "The official Discord bot for Codewars",
  "author": "kazk",
  "license": "MIT",
  "engines": {
    "node": ">= 16.6.0",
    "npm": ">= 7"
  },
  "main": "./lib/main.js",
  "scripts": {
    "start": "node ./lib/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf lib",
    "plop": "plop",
    "prepare": "husky install && npm run build",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.11.22",
    "@types/ws": "^7.4.4",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "plop": "^3.0.5",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@discordjs/rest": "^0.3.0",
    "@types/node-fetch": "^2.5.12",
    "common-tags": "^1.8.0",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "fuzzysearch": "^1.0.3",
    "node-fetch": "^2.6.6",
    "table": "^6.8.0",
    "tslib": "^2.2.0",
    "znv": "^0.3.1",
    "zod": "^3.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "prettier": {
    "printWidth": 100
  }
}
